<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http::/mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.MemberMapper">
	<resultMap type="org.zerock.domain.MemberVO" id="memberMap">
		<id property="userid" column="userid"></id>
		<result property="pw" column="pw"></result>
		<result property="username" column="username"></result>
		<result property="nickname" column="nickname"></result>
		<result property="eamil" column="email"></result>
		<result property="phone" column="phone"></result>
		<result property="addr" column="addr"></result>
		<result property="detAddr" column="detAddr"></result>
		<result property="postCode" column="postCode"></result>
		<result property="birth_date" column="birth_date"></result>
		<result property="gender" column="gender"></result>
		<result property="regDate" column="regDate"></result>
		<result property="grade" column="grade"></result>
		<collection property="authList" resultMap="authMap"></collection>
	</resultMap>
	<resultMap type="org.zerock.domain.AuthVO" id="authMap">
		<result property="userid" column="userid"/>
		<result property="auth" column="auth"/>
	</resultMap>
<insert id="insert">
	insert into member(userid, pw, username) values(#{userid},#{pw},#{username})
</insert>	
<select id="read" resultMap="memberMap">
	select mem.userid, pw, username, enabled, regDate, auth
	from member mem left outer join member_auth auth on mem.userid = auth.userid
	where mem.userid = #{userid}
</select>
<select id="idCheck" resultType="int">
	select count(*) from member where userid = #{userid}
</select>
</mapper>